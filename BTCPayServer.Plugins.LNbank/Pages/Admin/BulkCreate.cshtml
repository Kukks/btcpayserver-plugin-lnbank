@page "/plugins/lnbank/admin/bulk-create"
@model BulkCreateModel

@{
    ViewData.SetActivePage(LNbankNavPages.Admin, "Bulk create LNBank wallets");
}

@section LNbankFoot {
    <partial name="_ValidationScriptsPartial"/>
}

<partial name="_StatusMessage"/>

<h2 class="mt-1 mb-4">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-xl-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WalletName" class="form-label"></label>
                <input asp-for="WalletName" class="form-control" autofocus required/>
                <span asp-validation-for="WalletName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InitialBalance" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="InitialBalance" class="form-control" min="0" type="number" step="1"/>
                    <span class="input-group-text" id="InitialBalance-Addon">sats</span>
                </div>
                <span asp-validation-for="InitialBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WalletsToCreate" class="form-label"></label>
                <input asp-for="WalletsToCreate" class="form-control" type="number" step="1"/>
                <span asp-validation-for="WalletsToCreate" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input asp-for="InitBoltCard" class="form-check-input" type="checkbox">
                <label asp-for="InitBoltCard" class="form-label"></label>
                <span asp-validation-for="InitBoltCard" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" id="LNbank-Create"/>
            </div>
        </form>
    </div>
</div>