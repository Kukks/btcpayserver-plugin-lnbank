@page "/plugins/lnbank/wallets/create"
@using BTCPayServer.Client
@using BTCPayServer.Plugins.LNbank.Authentication
@model BTCPayServer.Plugins.LNbank.Pages.Wallets.CreateModel

@{
    ViewData.SetActivePage(LNbankNavPages.Wallets, "Create a new LNbank wallet");
}

@section LNbankFoot {
    <partial name="_ValidationScriptsPartial" />
}

<partial name="_StatusMessage" />

<h2 class="mt-1 mb-4">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-xl-8 col-xxl-constrain">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ReturnUrl" type="hidden" />
            <div class="form-group">
                <label asp-for="Wallet.Name" class="form-label"></label>
                <input asp-for="Wallet.Name" class="form-control" autofocus required />
                <span asp-validation-for="Wallet.Name" class="text-danger"></span>
            </div>
            <div class="form-group" permission="@LNbankPolicies.CanManageLNbank">
                <label asp-for="InitialBalance" class="form-label"></label>
                <div class="input-group" style="max-width:12rem">
                    <input asp-for="InitialBalance" class="form-control" min="0" type="number" step="1"/>
                    <span class="input-group-text" id="InitialBalance-Addon">sats</span>
                </div>
                <span asp-validation-for="InitialBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" id="LNbank-Create" />
            </div>
        </form>
    </div>
</div>
